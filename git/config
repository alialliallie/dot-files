[user]
	name = Allison Lara
	email = allison@alliesaur.us
[core]
	editor = vim
    pager = less -X -R
[color]
    ui = true
[alias]
    dt = difftool
    mt = mergetool
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    dlc = diff --cached HEAD^
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
    unassumeall = "!git assumed | xargs git update-index --no-assume-unchanged"
    standup = "!git log --since yesterday --author `git config user.email` --pretty=short"
    st = status -sb
    authors = "!git log --all --format='%aN <%cE>' | sort -u"
    fsync = "!f(){ local branch=`git symbolic-ref HEAD | cut -d/ -f3-`; git pull upstream $branch && git push origin $branch; }; f"
    make-fetch-happen = fetch --all -p --tags
    praise = blame
	discard = checkout --
    unstage = reset --
	staged = diff --cached
    pr = !"pr() { git fetch upstream pull/$1/head:pr-$1; git checkout pr-$1; }; pr"
    cleanup = !"c() { git branch --merged | grep -v \\* | xargs git branch -d }; c"
[push]
    default = upstream
[difftool]
    prompt = false
[mergetool]
    prompt = false
[merge]
    conflictstyle = diff3
[filter "media"]
    clean = git media clean %f
    smudge = git media smudge %f
    required = true
[credential]
    helper = osxkeychain
[hub]
    protocol = ssh
[filter "lfs"]
    clean = git lfs clean %f
    smudge = git lfs smudge %f
    required = true
[rerere]
    enabled = true
[rebase]
    autoSquash = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX
[include]
    path = local.gitconfig
